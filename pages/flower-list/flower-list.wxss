.page {
  padding: 32rpx 24rpx 60rpx;
}

.page__header {
  margin-bottom: 24rpx;
}

.page__title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.page__subtitle {
  color: #5a6b7d;
  font-size: 26rpx;
}

.meta-controls {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(31, 42, 61, 0.08);
  margin-bottom: 24rpx;
}

.meta-controls__progress,
.meta-controls__stats,
.meta-controls__summary {
  display: block;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.meta-controls__summary {
  color: #4d5b6b;
  margin-bottom: 16rpx;
}

.meta-controls__field {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  gap: 12rpx;
}

.meta-controls__label {
  font-size: 26rpx;
  color: #1f2a3d;
}

.meta-controls__input {
  flex: 1;
  border: 1rpx solid #d9dee5;
  border-radius: 12rpx;
  padding: 10rpx 16rpx;
  background: #f7f9fc;
  font-size: 26rpx;
}

.meta-controls__picker {
  flex: 1;
  border: 1rpx solid #d9dee5;
  border-radius: 12rpx;
  padding: 10rpx 16rpx;
  background: #f7f9fc;
  font-size: 26rpx;
  color: #1f2a3d;
}

.meta-controls__help,
.meta-controls__hint {
  display: block;
  font-size: 24rpx;
  color: #6b7a8c;
  margin-bottom: 16rpx;
}

.meta-controls__toggle {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.meta-controls__reset {
  margin-bottom: 16rpx;
}

.meta-controls__reset.secondary {
  margin-bottom: 12rpx;
  color: #2962ff;
}

.status {
  font-size: 26rpx;
  margin-bottom: 16rpx;
}

.empty {
  text-align: center;
  color: #6b7a8c;
  font-size: 26rpx;
  margin-top: 32rpx;
}

.groups {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.group {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(31, 42, 61, 0.06);
}

.group__title {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.group__tier {
  font-size: 24rpx;
  color: #5a6b7d;
}

.flower-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220rpx, 1fr));
  gap: 16rpx;
}

.flower-card {
  background: #f7f9fc;
  border-radius: 16rpx;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.flower-card__image {
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  background: #e6ebf2;
}

.flower-card__img {
  width: 100%;
  height: 200rpx;
  display: block;
}

.flower-card__img.placeholder {
  height: 200rpx;
  font-size: 22rpx;
  color: #7a8899;
  display: flex;
  align-items: center;
  justify-content: center;
}

.flower-card__name {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.flower-card__note {
  display: block;
  font-size: 22rpx;
  color: #7a8899;
  margin-bottom: 12rpx;
}

.flower-card__meta {
  font-size: 22rpx;
  color: #4d5b6b;
}

.flower-card__meta-line {
  display: flex;
  flex-wrap: wrap;
  gap: 4rpx;
  margin-bottom: 6rpx;
}

.flower-card__meta-label {
  color: #1f2a3d;
  font-weight: 600;
}

.flower-card__meta-value {
  color: #4d5b6b;
}

.highlight {
  color: #d32f2f;
  font-weight: 600;
}

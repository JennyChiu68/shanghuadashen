<view class="detail" wx:if="{{flower}}">
  <view class="detail__image">
    <image wx:if="{{flower.image_url}}" class="detail__img" src="{{flower.image_url}}" mode="aspectFill" />
    <view wx:else class="detail__img placeholder">暂无图片</view>
  </view>

  <view class="detail__header">
    <text class="detail__title">{{flower.name}}</text>
    <view class="detail__tags">
      <text class="detail__tag">第 {{flower.group}} 组</text>
      <text class="detail__tag">{{flower.tier}}</text>
    </view>
  </view>

  <view class="detail__section">
    <text class="detail__label">别名</text>
    <text class="detail__value">{{aliasText}}</text>
  </view>
  <view class="detail__section">
    <text class="detail__label">花语</text>
    <text class="detail__value">{{meaningText}}</text>
  </view>
  <view class="detail__section">
    <text class="detail__label">季节</text>
    <text class="detail__value">{{seasonText}}</text>
  </view>
  <view class="detail__section">
    <text class="detail__label">观赏提示</text>
    <text class="detail__value">{{seasonHint}}</text>
  </view>
  <view class="detail__section">
    <text class="detail__label">检索拼音</text>
    <text class="detail__value">{{pinyinText}}</text>
  </view>
  <view class="detail__section">
    <text class="detail__label">拼音首字母</text>
    <text class="detail__value">{{initialsText}}</text>
  </view>
</view>

<view class="detail__empty" wx:if="{{!flower}}">
  {{statusText}}
</view>

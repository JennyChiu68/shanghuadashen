.detail {
  padding: 32rpx 24rpx 60rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  background: #f3f6fb;
  min-height: 100vh;
}

.detail__image {
  width: 100%;
  border-radius: 24rpx;
  overflow: hidden;
  background: #e6ebf2;
}

.detail__img {
  width: 100%;
  height: 360rpx;
  display: block;
}

.detail__img.placeholder {
  height: 360rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #7a8899;
  font-size: 26rpx;
}

.detail__header {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(31, 42, 61, 0.06);
}

.detail__title {
  font-size: 40rpx;
  font-weight: 600;
}

.detail__tags {
  display: flex;
  gap: 12rpx;
}

.detail__tag {
  background: #f1f4f9;
  color: #4d5b6b;
  border-radius: 999rpx;
  padding: 6rpx 18rpx;
  font-size: 24rpx;
}

.detail__section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(31, 42, 61, 0.06);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail__label {
  font-size: 24rpx;
  color: #6b7a8c;
}

.detail__value {
  font-size: 28rpx;
  color: #1f2a3d;
}

.detail__empty {
  padding: 60rpx 24rpx;
  text-align: center;
  color: #6b7a8c;
}
